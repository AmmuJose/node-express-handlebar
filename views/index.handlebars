<div class="container">
  <h1>Eat-Da-Burger!</h1>

  <h2>Burgers</h2>
  <ul>
    {{#each burgers}} {{#unless this.devoured}}
    <li>
      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST" class="form-inline">
        <div class="form-group">
          {{this.burger_name}}
          <input type="hidden" name="devour" value="true">
          <button type="submit" class="btn btn-primary">Devour</button>
        </div>
      </form>
    </li>
    <br> {{/unless}} {{/each}}
  </ul>

  <h2>Burgers that are devoured!</h2>

  <ul>
    {{#each burgers}} {{#if this.devoured}}
    <li>
      <form action="burgers/update/{{this.id}}?_method=PUT" method="POST" class="form-inline">
        <div class="form-group">
          {{this.burger_name}}
          <input type="hidden" name="devour" value="false">
          <button type="submit" class="btn btn-primary">UnDevour</button>
        </div>
      </form>
      <br>
    </li>
    {{/if}} {{/each}}
  </ul>

  <h2>Add a Burger</h2>
  <form class="create-update-form" action="burgers/create" method="POST" class="form-inline">
    <div class="form-group">
      <label for="burger_name">Burger Name:</label>
      <input type="text" id="burger_name" name="burger_name">
      <button type="submit" class="btn btn-primary">Add Burger</button>
    </div>
  </form>
  <br>
</div>